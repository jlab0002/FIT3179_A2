{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jlab0002/FIT3179_A2/main/ne_50m_admin_1_states_provinces.json",
    "format": {
      "type": "topojson",
      "feature": "ne_50m_admin_1_states_provinces"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jlab0002/FIT3179_A2/main/pay_gap_state.csv"
        },
        "key": "State",
        "fields": ["pay_gap"]
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 1
      },
      "encoding": {
        "color": {
          "field": "pay_gap",
          "type": "quantitative",
          "title": "Pay Gap (%)",
          "scale": {
            "scheme": "blues"
          }
        },
        "opacity": {
          "condition": {
            "selection": "highlight",
            "value": 1
          },
          "value": 0.6
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "pay_gap", "type": "quantitative", "title": "Pay Gap (%)", "format": ".0%"}
        ]
      },
      "selection": {
        "highlight": {
          "type": "single",
          "on": "mouseover",
          "empty": "none",
          "clear": "mouseout"
        }
      }
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "width": 450,
  "height": 300
}
