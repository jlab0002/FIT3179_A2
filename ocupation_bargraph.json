{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jlab0002/FIT3179_A2/main/av_weekly_occupation.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "fold": ["Males", "Females"],
      "as": ["Gender", "Earnings"]
    },
    {
      "calculate": "datum.Gender === 'Males' ? -datum.Earnings : datum.Earnings",
      "as": "EarningsOffset"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "tooltip": true
      },
      "params": [
        {
          "name": "highlight",
          "select": {
            "type": "point",
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ],
      "encoding": {
        "y": {
          "field": "Occupation",
          "type": "nominal",
          "axis": {"title": "Occupation"}
        },
        "x": {
          "field": "EarningsOffset",
          "type": "quantitative",
          "title": "Earnings ($)",
          "axis": {"title": "Earnings ($)", "format": "d"}
        },
        "color": {
          "field": "Gender",
          "type": "nominal",
          "scale": {
            "domain": ["Males", "Females"],
            "range": ["#4A90E2", "#ec3b83"]
          },
          "title": "Gender"
        },
        "opacity": {
          "condition": {
            "param": "highlight",
            "value": 1
          },
          "value": 0.6
        },
        "tooltip": [
          {"field": "Occupation", "type": "nominal", "title": "Occupation"},
          {"field": "Gender", "type": "nominal", "title": "Gender"},
          {"field": "Earnings", "type": "quantitative", "title": "Earnings ($)"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5
      },
      "encoding": {
        "y": {
          "field": "Occupation",
          "type": "nominal"
        },
        "x": {
          "field": "EarningsOffset",
          "type": "quantitative"
        },
        "text": {"field": "Earnings", "type": "quantitative"},
        "color": {"value": "black"}
      }
    }
  ],
  "config": {
    "bar": {
      "size": 15
    },
    "axis": {
      "labelFontSize": 11,
      "titleFontSize": 11
    }
  },
  "width": 270,
  "height": 250
}
