{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Employment status by sex, showing 1st Quartile, Median, and 3rd Quartile earnings.",
  "data": {
    "url": "data/all_emp_status_by_sex.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "fold": [
        "1st Quartile ($)", 
        "Median ($)", 
        "3rd Quartile ($)"
      ],
      "as": ["Quartile", "Earnings"]
    },
    {
      "calculate": "toNumber(datum.Earnings)",
      "as": "Earnings_numeric"
    }
  ],
  "mark": {
    "type": "point",
    "filled": true,
    "tooltip": true,
    "size": 200
  },
  "params": [
    {
      "name": "highlight",
      "select": {
        "type": "point",
        "on": "mouseover",
        "clear": "mouseout"
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "Earnings_numeric",
      "type": "quantitative",
      "axis": {"title": "Earnings ($)"},
      "scale": {"domain": [0, 2600]}
    },
    "y": {
      "field": "Employment Status",
      "type": "nominal",
      "axis": {"title": ""},
      "scale": {
        "domain": [
          "Full-time males", 
          "Full-time females", 
          "Part-time males", 
          "Part-time females", 
          "All males", 
          "All females"
        ]
      }
    },
    "shape": {
      "field": "Quartile",
      "type": "nominal",
      "scale": {
        "domain": ["1st Quartile ($)", "Median ($)", "3rd Quartile ($)"],
        "range": ["circle", "diamond", "square"]
      },
      "legend": {"title": ""}
    },
    "color": {
      "field": "Quartile",
      "type": "nominal",
      "scale": {
        "domain": ["1st Quartile ($)", "Median ($)", "3rd Quartile ($)"],
        "range": ["#4e79a7", "#003f5c", "#ff7c43"]
      },
      "legend": {"title": ""}
    },
    "opacity": {
      "condition": {
        "param": "highlight",
        "value": 1
      },
      "value": 0.4
    },
    "tooltip": [
      {"field": "Employment Status", "type": "nominal", "title": "Employment Status"},
      {"field": "Quartile", "type": "nominal", "title": "Quartile"},
      {"field": "Earnings_numeric", "type": "quantitative", "title": "Earnings ($)"}
    ]
  },
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14,
      "labelLimit": 180
    }
  },
  "width": 350,
  "height": 200
}
